{
    "name": "hackzilla/ticket-bundle",
    "type": "symfony-bundle",
    "description": "This Bundle provides multilingual ticketing functionality for Symfony applications.",
    "keywords": [
        "ticket",
        "ticketing",
        "help desk",
        "helpdesk",
        "support"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Platt",
            "email": "github@ofdan.co.uk",
            "homepage": "http://www.hackzilla.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "doctrine/doctrine-bundle": "^2.0",
        "doctrine/orm": "^2.4.8",
        "knplabs/knp-paginator-bundle": "^5.0",
        "symfony/config": "^4.4",
        "symfony/console": "^4.4",
        "symfony/dependency-injection": "^4.4",
        "symfony/event-dispatcher": "^4.4",
        "symfony/form": "^4.4",
        "symfony/framework-bundle": "^4.4",
        "symfony/http-foundation": "^4.4",
        "symfony/http-kernel": "^4.4",
        "symfony/options-resolver": "^4.4",
        "symfony/security-bundle": "^4.4",
        "symfony/translation": "^4.4",
        "symfony/twig-bundle": "^4.4",
        "symfony/validator": "^4.4",
        "symfony/yaml": "^4.4",
        "twig/twig": "^2.9"
    },
    "require-dev": {
        "ext-pdo_sqlite": "*",
        "friendsofphp/php-cs-fixer": "^2.0",
        "friendsofsymfony/user-bundle": "^2.1",
        "phpstan/phpstan": "^0.12.32",
        "symfony/phpunit-bridge": "^5.1",
        "symfony/security": "^4.4"
    },
    "suggest": {
        "friendsofsymfony/user-bundle": "In order to ease user management",
        "vich/uploader-bundle": "Allow attaching files to ticket messages"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Hackzilla\\Bundle\\TicketBundle\\": ""
        },
        "exclude-from-classmap": [
            "Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Hackzilla\\Bundle\\TicketBundle\\Tests\\": "Tests/"
        }
    }
}
